// ===== STUDENTS TAB =====
class _ManageStudentsTab extends ConsumerStatefulWidget {
  const _ManageStudentsTab();

  @override
  ConsumerState<_ManageStudentsTab> createState() => _ManageStudentsTabState();
}

class _ManageStudentsTabState extends ConsumerState<_ManageStudentsTab> {
  final TextEditingController _searchController = TextEditingController();
  String _activeFilter = 'all';

  @override
  void dispose() {
    _searchController.dispose();
    super.dispose();
  }

  Future<void> _showStudentDetails(BuildContext context, WidgetRef ref, UserProfile student) async {
    final firestore = ref.read(firestoreServiceProvider);
    final appointments = await firestore.appointmentsForStudent(student.uid).first;
    final reviewedAppointments = appointments
        .where((a) => a.studentRating != null || (a.studentComment != null && a.studentComment!.isNotEmpty))
        .toList();

    if (!context.mounted) return;

    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text('${student.displayName} - Details'),
        content: SizedBox(
          width: double.maxFinite,
          child: SingleChildScrollView(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text('Email: ${student.email}', style: const TextStyle(fontWeight: FontWeight.bold)),
                Text('Student ID: ${student.studentId ?? "N/A"}'),
                Text('Phone: ${student.phoneNumber ?? "N/A"}'),
                Text('Date of Birth: ${student.dateOfBirth ?? "N/A"}'),
                Text('Gender: ${student.gender ?? "N/A"}'),
                if (student.counsellorId != null) Text('Counsellor ID: ${student.counsellorId}'),
                const Divider(height: 24),
                const Text('Medical Information:', style: TextStyle(fontWeight: FontWeight.bold, fontSize: 16)),
                const SizedBox(height: 8),
                Text('Blood Type: ${student.bloodType ?? "N/A"}'),
                Text('Allergies: ${student.allergies ?? "None"}'),
                if (student.medicalConditions != null && student.medicalConditions!.isNotEmpty) ...[
                  const SizedBox(height: 4),
                  Text('Medical Conditions: ${student.medicalConditions}'),
                ],
                Text('Emergency Contact: ${student.emergencyContact ?? "N/A"}'),
                Text('Emergency Phone: ${student.emergencyContactPhone ?? "N/A"}'),
                const Divider(height: 24),
                Text('Session Reviews (${reviewedAppointments.length}):',
                    style: const TextStyle(fontWeight: FontWeight.bold, fontSize: 16)),
                const SizedBox(height: 8),
                if (reviewedAppointments.isEmpty)
                  const Text('No reviews yet', style: TextStyle(color: Colors.grey))
                else
                  ...reviewedAppointments.map((appt) => Card(
                        margin: const EdgeInsets.only(bottom: 8),
                        child: Padding(
                          padding: const EdgeInsets.all(12),
                          child: Column(
                            crossAxisAlignment: CrossAxisAlignment.start,
                            children: [
                              Row(
                                children: [
                                  Text(DateFormat('MMM d, y').format(appt.start),
                                      style: const TextStyle(fontWeight: FontWeight.bold)),
                                  const Spacer(),
                                  if (appt.studentRating != null)
                                    Row(
                                      children: [
                                        ...List.generate(appt.studentRating!, (i) => const Icon(Icons.star, size: 16, color: Colors.amber)),
                                        ...List.generate(5 - appt.studentRating!, (i) => const Icon(Icons.star_border, size: 16, color: Colors.grey)),
                                      ],
                                    ),
                                ],
                              ),
                              if (appt.topic != null)
                                Text('Topic: ${appt.topic}', style: const TextStyle(fontSize: 12, color: Colors.grey)),
                              if (appt.studentComment != null && appt.studentComment!.isNotEmpty) ...[
                                const SizedBox(height: 4),
                                Text(appt.studentComment!, style: const TextStyle(fontStyle: FontStyle.italic)),
                              ],
                              const SizedBox(height: 8),
                              Row(
                                children: const [
                                  Icon(Icons.check_circle, color: Colors.green, size: 16),
                                  SizedBox(width: 8),
                                  Text('Published',
                                      style: TextStyle(fontSize: 12, color: Colors.green, fontWeight: FontWeight.bold)),
                                ],
                              ),
                            ],
                          ),
                        ),
                      )),
              ],
            ),
          ),
        ),
        actions: [
          TextButton(onPressed: () => Navigator.pop(context), child: const Text('Close')),
        ],
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final firestore = ref.watch(firestoreServiceProvider);
    final authService = ref.watch(authServiceProvider);

    return StreamBuilder<List<UserProfile>>(
      stream: firestore.allStudents(),
      builder: (context, snapshot) {
        if (snapshot.connectionState == ConnectionState.waiting) {
          return const Center(child: CircularProgressIndicator());
        }

        var students = snapshot.data!;
        final q = _searchController.text.trim().toLowerCase();
        if (_activeFilter != 'all') {
          final wantActive = _activeFilter == 'active';
          students = students.where((s) => s.isActive == wantActive).toList();
        }
        if (q.isNotEmpty) {
          students = students.where((s) {
            final name = s.displayName.toLowerCase();
            final email = s.email.toLowerCase();
            final phone = (s.phoneNumber ?? '').toLowerCase();
            final sid = (s.studentId ?? '').toLowerCase();
            return name.contains(q) || email.contains(q) || phone.contains(q) || sid.contains(q);
          }).toList();
        }

        return Column(
          children: [
            Card(
              margin: const EdgeInsets.symmetric(horizontal: 8, vertical: 8),
              child: Padding(
                padding: const EdgeInsets.all(12),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    TextField(
                      controller: _searchController,
                      onChanged: (_) => setState(() {}),
                      decoration: const InputDecoration(
                        labelText: 'Search by name, email, phone, student ID',
                        prefixIcon: Icon(Icons.search),
                        border: OutlineInputBorder(),
                      ),
                    ),
                    const SizedBox(height: 8),
                    Wrap(
                      spacing: 8,
                      children: [
                        FilterChip(
                          label: const Text('All'),
                          selected: _activeFilter == 'all',
                          onSelected: (_) => setState(() => _activeFilter = 'all'),
                        ),
                        FilterChip(
                          label: const Text('Active'),
                          selected: _activeFilter == 'active',
                          onSelected: (_) => setState(() => _activeFilter = 'active'),
                        ),
                        FilterChip(
                          label: const Text('Inactive'),
                          selected: _activeFilter == 'inactive',
                          onSelected: (_) => setState(() => _activeFilter = 'inactive'),
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ),
            if (students.isEmpty)
              const Expanded(child: Center(child: Padding(padding: EdgeInsets.all(32), child: Text('No students found'))))
            else
              Expanded(
                child: ListView.builder(
                  padding: const EdgeInsets.all(8),
                  itemCount: students.length,
                  itemBuilder: (context, i) {
                    final student = students[i];
                    final isActive = student.isActive;
                    return _buildStudentTile(context, authService, student, isActive);
                  },
                ),
              ),
          ],
        );
      },
    );
  }

  Widget _buildStudentTile(BuildContext context, AuthService authService, UserProfile student, bool isActive) {
    return Card(
      margin: const EdgeInsets.symmetric(horizontal: 8, vertical: 4),
      child: ExpansionTile(
        leading: Icon(Icons.person, color: isActive ? Colors.blue : Colors.grey),
        title: Text(student.displayName),
        subtitle: Text(student.email),
        trailing: IconButton(
          icon: const Icon(Icons.info_outline),
          tooltip: 'View Full Details',
          onPressed: () => _showStudentDetails(context, ref, student),
        ),
        children: [
          Padding(
            padding: const EdgeInsets.all(16),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                _DetailRow(label: 'Student ID', value: student.studentId ?? 'N/A'),
                if (student.phoneNumber != null) _DetailRow(label: 'Phone', value: student.phoneNumber!),
                if (student.dateOfBirth != null) _DetailRow(label: 'Date of Birth', value: student.dateOfBirth!),
                if (student.gender != null) _DetailRow(label: 'Gender', value: student.gender!),
                _DetailRow(label: 'Status', value: isActive ? 'Active' : 'Inactive'),
                const SizedBox(height: 16),
                Row(
                  children: [
                    ElevatedButton.icon(
                      icon: Icon(isActive ? Icons.block : Icons.check_circle),
                      label: Text(isActive ? 'Disable' : 'Enable'),
                      onPressed: () async {
                        await authService.toggleUserStatus(student.uid, !isActive);
                        if (context.mounted) {
                          ScaffoldMessenger.of(context).showSnackBar(
                            SnackBar(content: Text(isActive ? 'Student disabled - automatically logged out' : 'Student enabled - can login now')),
                          );
                        }
                      },
                    ),
                    const SizedBox(width: 8),
                    TextButton.icon(
                      icon: const Icon(Icons.delete, color: Colors.red),
                      label: const Text('Delete', style: TextStyle(color: Colors.red)),
                      onPressed: () async {
                        final confirm = await showDialog<bool>(
                          context: context,
                          builder: (ctx) => AlertDialog(
                            title: const Text('Delete Student'),
                            content: Text('Permanently delete ${student.displayName}?'),
                            actions: [
                              TextButton(onPressed: () => Navigator.pop(ctx, false), child: const Text('Cancel')),
                              ElevatedButton(onPressed: () => Navigator.pop(ctx, true), child: const Text('Delete')),
                            ],
                          ),
                        );
                        if (confirm == true) {
                          await authService.deleteUserAccount(student.uid);
                          if (context.mounted) {
                            ScaffoldMessenger.of(context).showSnackBar(const SnackBar(content: Text('Student deleted')));
                          }
                        }
                      },
                    ),
                  ],
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }
}

// ===== COUNSELLORS TAB =====
class _ManageCounsellorsTab extends ConsumerStatefulWidget {
  const _ManageCounsellorsTab();

  @override
  ConsumerState<_ManageCounsellorsTab> createState() => _ManageCounsellorsTabState();
}

class _ManageCounsellorsTabState extends ConsumerState<_ManageCounsellorsTab> {
  final TextEditingController _searchController = TextEditingController();
  String _activeFilter = 'all';

  @override
  void dispose() {
    _searchController.dispose();
    super.dispose();
  }

  Future<void> _showRegisterCounsellorDialog(BuildContext context, WidgetRef ref) async {
    final nameController = TextEditingController();
    final emailController = TextEditingController();
    final phoneController = TextEditingController();
    final designationController = TextEditingController();
    final expertiseController = TextEditingController();
    final passwordController = TextEditingController();
    final authService = ref.read(authServiceProvider);

    await showDialog(
      context: context,
      builder: (dialogContext) => Dialog(
        insetPadding: const EdgeInsets.symmetric(horizontal: 16),
        child: Padding(
          padding: const EdgeInsets.all(24),
          child: SingleChildScrollView(
            child: Column(
              mainAxisSize: MainAxisSize.min,
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                const Text(
                  'Register New Counsellor',
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                const SizedBox(height: 24),
                _buildRequiredField('Full Name', nameController, Icons.person),
                _buildRequiredField('Email', emailController, Icons.email),
                _buildRequiredField('Phone Number', phoneController, Icons.phone),
                _buildRequiredField('Designation', designationController, Icons.work),
                _buildRequiredField('Expertise/Specialization', expertiseController, Icons.school),
                _buildRequiredField('Temporary Password', passwordController, Icons.lock, isPassword: true),
                const SizedBox(height: 24),
                Row(
                  mainAxisAlignment: MainAxisAlignment.end,
                  children: [
                    TextButton(
                      onPressed: () => Navigator.pop(dialogContext),
                      child: const Text('Cancel'),
                    ),
                    const SizedBox(width: 12),
                    ElevatedButton(
                      onPressed: () async {
                        final name = nameController.text.trim();
                        final email = emailController.text.trim();
                        final phone = phoneController.text.trim();
                        final designation = designationController.text.trim();
                        final expertise = expertiseController.text.trim();
                        final password = passwordController.text;

                        if (name.isEmpty || email.isEmpty || phone.isEmpty || designation.isEmpty || expertise.isEmpty || password.isEmpty) {
                          if (dialogContext.mounted) {
                            ScaffoldMessenger.of(dialogContext).showSnackBar(
                              const SnackBar(content: Text('All fields are required')),
                            );
                          }
                          return;
                        }

                        try {
                          await authService.createCounsellorWithPassword(
                            email: email,
                            password: password,
                            displayName: name,
                            counsellorId: email.split('@')[0],
                            designation: designation,
                            expertise: expertise,
                          );
                          if (context.mounted) {
                            Navigator.pop(dialogContext);
                            ScaffoldMessenger.of(context).showSnackBar(
                              const SnackBar(content: Text('Counsellor registered successfully')),
                            );
                          }
                        } catch (e) {
                          if (context.mounted) {
                            ScaffoldMessenger.of(context).showSnackBar(
                              SnackBar(content: Text('Error: $e')),
                            );
                          }
                        }
                      },
                      child: const Text('Register'),
                    ),
                  ],
                ),
              ],
            ),
          ),
        ),
      ),
    );

    nameController.dispose();
    emailController.dispose();
    phoneController.dispose();
    designationController.dispose();
    expertiseController.dispose();
    passwordController.dispose();
  }

  Widget _buildRequiredField(String label, TextEditingController controller, IconData icon, {bool isPassword = false}) {
    return Padding(
      padding: const EdgeInsets.only(bottom: 16),
      child: TextField(
        controller: controller,
        obscureText: isPassword,
        decoration: InputDecoration(
          labelText: label,
          labelStyle: const TextStyle(color: Colors.black87),
          hintText: 'Enter $label',
          prefixIcon: Icon(icon),
          suffixIcon: const Padding(
            padding: EdgeInsets.only(right: 12),
            child: Text('*', style: TextStyle(color: Colors.red, fontSize: 18, fontWeight: FontWeight.bold)),
          ),
          suffixIconConstraints: const BoxConstraints(minWidth: 0, minHeight: 0),
          border: OutlineInputBorder(borderRadius: BorderRadius.circular(8)),
          contentPadding: const EdgeInsets.symmetric(horizontal: 16, vertical: 12),
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final firestore = ref.watch(firestoreServiceProvider);
    final authService = ref.watch(authServiceProvider);

    return StreamBuilder<List<UserProfile>>(
      stream: firestore.counsellors(),
      builder: (context, snapshot) {
        if (snapshot.connectionState == ConnectionState.waiting) {
          return const Center(child: CircularProgressIndicator());
        }

        var counsellors = snapshot.data!;
        final q = _searchController.text.trim().toLowerCase();
        if (_activeFilter != 'all') {
          final wantActive = _activeFilter == 'active';
          counsellors = counsellors.where((c) => c.isActive == wantActive).toList();
        }
        if (q.isNotEmpty) {
          counsellors = counsellors.where((c) {
            final name = c.displayName.toLowerCase();
            final email = c.email.toLowerCase();
            final phone = (c.phoneNumber ?? '').toLowerCase();
            return name.contains(q) || email.contains(q) || phone.contains(q);
          }).toList();
        }

        return Column(
          children: [
            Card(
              margin: const EdgeInsets.symmetric(horizontal: 8, vertical: 8),
              child: Padding(
                padding: const EdgeInsets.all(12),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Row(
                      children: [
                        Expanded(
                          child: TextField(
                            controller: _searchController,
                            onChanged: (_) => setState(() {}),
                            decoration: const InputDecoration(
                              labelText: 'Search counsellors',
                              prefixIcon: Icon(Icons.search),
                              border: OutlineInputBorder(),
                            ),
                          ),
                        ),
                        const SizedBox(width: 8),
                        ElevatedButton.icon(
                          onPressed: () => _showRegisterCounsellorDialog(context, ref),
                          icon: const Icon(Icons.add),
                          label: const Text('Register'),
                        ),
                      ],
                    ),
                    const SizedBox(height: 8),
                    Wrap(
                      spacing: 8,
                      children: [
                        FilterChip(
                          label: const Text('All'),
                          selected: _activeFilter == 'all',
                          onSelected: (_) => setState(() => _activeFilter = 'all'),
                        ),
                        FilterChip(
                          label: const Text('Active'),
                          selected: _activeFilter == 'active',
                          onSelected: (_) => setState(() => _activeFilter = 'active'),
                        ),
                        FilterChip(
                          label: const Text('Inactive'),
                          selected: _activeFilter == 'inactive',
                          onSelected: (_) => setState(() => _activeFilter = 'inactive'),
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ),
            Expanded(
              child: ListView.builder(
                padding: const EdgeInsets.all(8),
                itemCount: counsellors.length,
                itemBuilder: (context, i) {
                  final c = counsellors[i];
                  return _buildCounsellorExpansionTile(context, authService, firestore, c);
                },
              ),
            ),
          ],
        );
      },
    );
  }

  Widget _buildCounsellorExpansionTile(BuildContext context, AuthService authService, FirestoreService firestore, UserProfile c) {
    return Card(
      margin: const EdgeInsets.symmetric(horizontal: 8, vertical: 4),
      child: ExpansionTile(
        leading: Icon(Icons.psychology, color: c.isActive ? Colors.purple : Colors.grey),
        title: Text(c.displayName),
        subtitle: Text(c.email),
        trailing: IconButton(
          icon: const Icon(Icons.info_outline),
          tooltip: 'View Full Details',
          onPressed: () => _showCounsellorDetailsDialog(context, firestore, c),
        ),
        children: [
          Padding(
            padding: const EdgeInsets.all(16),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                if (c.designation != null) _DetailRow(label: 'Designation', value: c.designation!),
                if (c.expertise != null) _DetailRow(label: 'Expertise', value: c.expertise!),
                if (c.phoneNumber != null) _DetailRow(label: 'Phone', value: c.phoneNumber!),
                _DetailRow(label: 'Status', value: c.isActive ? 'Active' : 'Inactive'),
                const SizedBox(height: 16),
                Row(
                  children: [
                    ElevatedButton.icon(
                      icon: Icon(c.isActive ? Icons.block : Icons.check_circle),
                      label: Text(c.isActive ? 'Disable' : 'Enable'),
                      onPressed: () async {
                        await authService.toggleUserStatus(c.uid, !c.isActive);
                        if (context.mounted) {
                          ScaffoldMessenger.of(context).showSnackBar(
                            SnackBar(content: Text(c.isActive ? 'Counsellor disabled' : 'Counsellor enabled')),
                          );
                        }
                      },
                    ),
                    const SizedBox(width: 8),
                    TextButton.icon(
                      icon: const Icon(Icons.delete, color: Colors.red),
                      label: const Text('Delete', style: TextStyle(color: Colors.red)),
                      onPressed: () async {
                        final confirm = await showDialog<bool>(
                          context: context,
                          builder: (ctx) => AlertDialog(
                            title: const Text('Delete Counsellor'),
                            content: Text('Permanently delete ${c.displayName}?'),
                            actions: [
                              TextButton(onPressed: () => Navigator.pop(ctx, false), child: const Text('Cancel')),
                              ElevatedButton(onPressed: () => Navigator.pop(ctx, true), child: const Text('Delete')),
                            ],
                          ),
                        );
                        if (confirm == true) {
                          await authService.deleteUserAccount(c.uid);
                          if (context.mounted) {
                            ScaffoldMessenger.of(context).showSnackBar(const SnackBar(content: Text('Counsellor deleted')));
                          }
                        }
                      },
                    ),
                    const SizedBox(width: 8),
                    OutlinedButton.icon(
                      icon: const Icon(Icons.calendar_today),
                      label: const Text('Add Leave'),
                      onPressed: () => _showAddLeaveForCounsellorDialog(context, ref, c),
                    ),
                  ],
                ),
