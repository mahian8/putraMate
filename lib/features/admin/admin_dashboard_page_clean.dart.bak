  Future<void> _showRescheduleDialog(BuildContext parentContext, Appointment appointment) async {
    DateTime selectedDate = appointment.start;
    TimeOfDay selectedStartTime = TimeOfDay.fromDateTime(appointment.start);
    TimeOfDay selectedEndTime = TimeOfDay.fromDateTime(appointment.end);

    await showDialog(
      context: parentContext,
      builder: (dialogContext) => StatefulBuilder(
        builder: (context, setState) => Dialog(
          insetPadding: const EdgeInsets.symmetric(horizontal: 16),
          child: Padding(
            padding: const EdgeInsets.all(24),
            child: SingleChildScrollView(
              child: Column(
                mainAxisSize: MainAxisSize.min,
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  const Text(
                    'Reschedule Appointment',
                    style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                  ),
                  const SizedBox(height: 24),
                  const Text('Current:', style: TextStyle(fontWeight: FontWeight.bold)),
                  Text('${DateFormat('MMM d, y').format(appointment.start)} • ${DateFormat('h:mm a').format(appointment.start)} - ${DateFormat('h:mm a').format(appointment.end)}'),
                  const SizedBox(height: 16),
                  const Divider(),
                  const SizedBox(height: 16),
                  const Text('New Date:', style: TextStyle(fontWeight: FontWeight.bold)),
                  const SizedBox(height: 8),
                  OutlinedButton.icon(
                    icon: const Icon(Icons.calendar_today),
                    label: Text(DateFormat('EEEE, MMMM d, yyyy').format(selectedDate)),
                    onPressed: () async {
                      final picked = await showDatePicker(
                        context: dialogContext,
                        initialDate: selectedDate,
                        firstDate: DateTime.now(),
                        lastDate: DateTime.now().add(const Duration(days: 365)),
                      );
                      if (picked != null) {
                        setState(() => selectedDate = picked);
                      }
                    },
                  ),
                  const SizedBox(height: 16),
                  const Text('Start Time:', style: TextStyle(fontWeight: FontWeight.bold)),
                  const SizedBox(height: 8),
                  OutlinedButton.icon(
                    icon: const Icon(Icons.access_time),
                    label: Text(selectedStartTime.format(context)),
                    onPressed: () async {
                      final picked = await showTimePicker(
                        context: dialogContext,
                        initialTime: selectedStartTime,
                      );
                      if (picked != null) {
                        setState(() => selectedStartTime = picked);
                      }
                    },
                  ),
                  const SizedBox(height: 16),
                  const Text('End Time:', style: TextStyle(fontWeight: FontWeight.bold)),
                  const SizedBox(height: 8),
                  OutlinedButton.icon(
                    icon: const Icon(Icons.access_time),
                    label: Text(selectedEndTime.format(context)),
                    onPressed: () async {
                      final picked = await showTimePicker(
                        context: dialogContext,
                        initialTime: selectedEndTime,
                      );
                      if (picked != null) {
                        setState(() => selectedEndTime = picked);
                      }
                    },
                  ),
                  const SizedBox(height: 24),
                  Row(
                    mainAxisAlignment: MainAxisAlignment.end,
                    children: [
                      TextButton(
                        onPressed: () => Navigator.pop(dialogContext),
                        child: const Text('Cancel'),
                      ),
                      const SizedBox(width: 12),
                      ElevatedButton(
                        onPressed: () async {
                          final newStart = DateTime(
                            selectedDate.year,
                            selectedDate.month,
                            selectedDate.day,
                            selectedStartTime.hour,
                            selectedStartTime.minute,
                          );
                          final newEnd = DateTime(
                            selectedDate.year,
                            selectedDate.month,
                            selectedDate.day,
                            selectedEndTime.hour,
                            selectedEndTime.minute,
                          );

                          if (newEnd.isBefore(newStart) || newEnd.isAtSameMomentAs(newStart)) {
                            ScaffoldMessenger.of(context).showSnackBar(
                              const SnackBar(content: Text('End time must be after start time')),
                            );
                            return;
                          }

                          final firestore = ref.read(firestoreServiceProvider);
                          await firestore.rescheduleAppointment(appointment.id, newStart, newEnd);
                          
                          // Send notification to student
                          await firestore.sendNotification(
                            userId: appointment.studentId,
                            title: 'Appointment Rescheduled',
                            message: 'Your appointment has been rescheduled to ${DateFormat('MMM d, y • h:mm a').format(newStart)}',
                            type: 'appointment_rescheduled',
                            appointmentId: appointment.id,
                          );

                          if (context.mounted) {
                            Navigator.pop(dialogContext);
                            Navigator.pop(parentContext);
                            ScaffoldMessenger.of(context).showSnackBar(
                              const SnackBar(content: Text('Appointment rescheduled and student notified')),
                            );
                          }
                        },
                        child: const Text('Confirm Reschedule'),
                      ),
                    ],
                  ),
                ],
              ),
            ),
          ),
        ),
      ),
    );
  }
}

