                if (c.expertise != null) _DetailRow(label: 'Expertise', value: c.expertise!),
                _DetailRow(label: 'Status', value: c.isActive ? 'Active' : 'Inactive'),
                const SizedBox(height: 12),
                Consumer(
                  builder: (ctx, ref, _) {
                    return StreamBuilder<List>(
                      stream: firestore.userLeaves(c.uid),
                      builder: (context, leaveSnap) {
                        final leaves = leaveSnap.data ?? [];
                        if (leaves.isEmpty) {
                          return const _DetailRow(label: 'Leave Status', value: 'No leaves scheduled');
                        }

                        final nowMs = DateTime.now().millisecondsSinceEpoch;
                        Map<String, dynamic>? activeLeave;
                        for (final l in leaves) {
                          final s = (l is Map) ? (l['startDate'] as int?) ?? 0 : 0;
                          final e = (l is Map) ? (l['endDate'] as int?) ?? 0 : 0;
                          if (s <= nowMs && e >= nowMs) {
                            activeLeave = (l is Map) ? Map<String, dynamic>.from(l) : null;
                            break;
                          }
                        }

                        if (activeLeave != null && activeLeave.isNotEmpty) {
                          final s = DateTime.fromMillisecondsSinceEpoch(activeLeave['startDate'] as int);
                          final e = DateTime.fromMillisecondsSinceEpoch(activeLeave['endDate'] as int);
                          final type = (activeLeave['leaveType'] as String?) ?? 'leave';
                          final msg = 'On leave (${type}): ${DateFormat('MMM d').format(s)} - ${DateFormat('MMM d, y').format(e)}';
                          return _DetailRow(label: 'Leave Status', value: msg);
                        }

                        return const _DetailRow(label: 'Leave Status', value: 'No active leaves');
                      },
                    );
                  },
                ),
              ],
            ),
          ),
        ),
        actions: [
          TextButton(onPressed: () => Navigator.pop(ctx), child: const Text('Close')),
        ],
      ),
    );
  }
