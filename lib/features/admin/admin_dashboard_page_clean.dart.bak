    Future<void> _showAddLeaveGlobalDialog(BuildContext context, WidgetRef ref) async {
      final firestore = ref.read(firestoreServiceProvider);
      UserProfile? selectedCounsellor;
      DateTime? startDate;
      DateTime? endDate;
      String leaveType = 'medical';
      List<Appointment> conflicts = [];
      bool loadingConflicts = false;
      final reasonController = TextEditingController();

      await showDialog(
        context: context,
        builder: (dialogContext) => StatefulBuilder(
          builder: (ctx, setState) => Dialog(
            insetPadding: const EdgeInsets.symmetric(horizontal: 16),
            child: Padding(
              padding: const EdgeInsets.all(24),
              child: SingleChildScrollView(
                child: Column(
                  mainAxisSize: MainAxisSize.min,
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    const Text('Add Counsellor Leave', style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold)),
                    const SizedBox(height: 16),
                    Consumer(
                      builder: (ctx, ref2, _) => StreamBuilder<List<UserProfile>>(
                        stream: firestore.counsellors(),
                        builder: (context, snap) {
                          final counsellors = snap.data ?? [];
                          return DropdownButtonFormField<UserProfile>(
                            value: selectedCounsellor,
                            items: counsellors
                                .map((c) => DropdownMenuItem<UserProfile>(
                                      value: c,
                                      child: Text(c.displayName),
                                    ))
                                .toList(),
                            onChanged: (c) {
                              setState(() {
                                selectedCounsellor = c;
                                conflicts = [];
                              });
                            },
                            decoration: const InputDecoration(labelText: 'Counsellor'),
                          );
                        },
                      ),
                    ),
                    const SizedBox(height: 12),
                    DropdownButtonFormField<String>(
                      value: leaveType,
                      decoration: const InputDecoration(labelText: 'Leave Type'),
                      items: const [
                        DropdownMenuItem(value: 'medical', child: Text('Medical')),
                        DropdownMenuItem(value: 'personal', child: Text('Personal')),
                        DropdownMenuItem(value: 'vacation', child: Text('Vacation')),
                        DropdownMenuItem(value: 'other', child: Text('Other')),
                      ],
                      onChanged: (v) => setState(() => leaveType = v ?? 'medical'),
                    ),
                    const SizedBox(height: 12),
                    ListTile(
                      title: const Text('Leave Range'),
                      subtitle: Text(
                        startDate != null && endDate != null
                            ? '${DateFormat('MMM d, y').format(startDate!)} → ${DateFormat('MMM d, y').format(endDate!)}'
                            : 'Select dates',
                      ),
                      trailing: Row(
                        mainAxisSize: MainAxisSize.min,
                        children: [
                          if (startDate != null || endDate != null)
                            IconButton(
                              tooltip: 'Clear',
                              icon: const Icon(Icons.clear),
                              onPressed: () {
                                setState(() {
                                  startDate = null;
                                  endDate = null;
                                  conflicts = [];
                                });
                              },
                            ),
                          const Icon(Icons.calendar_today),
                        ],
                      ),
                      onTap: () async {
                        final now = DateTime.now();
                        final picked = await showDialog<DateTimeRange>(
                          context: dialogContext,
                          builder: (context) => DateRangePickerDialog(
                            firstDate: DateTime(now.year, now.month, now.day),
                            lastDate: now.add(const Duration(days: 365)),
                            initialDateRange: startDate != null && endDate != null
                                ? DateTimeRange(start: startDate!, end: endDate!)
                                : null,
                          ),
                        );

                        if (picked != null && selectedCounsellor != null) {
                          setState(() {
                            startDate = picked.start;
                            endDate = picked.end;
                            loadingConflicts = true;
                          });

                          final startOfDay = DateTime(
                            picked.start.year,
                            picked.start.month,
                            picked.start.day,
                          );
                          final endOfDay = DateTime(
                            picked.end.year,
                            picked.end.month,
                            picked.end.day,
                            23,
                            59,
                            59,
                          );

                          final overlaps = await ref
                              .read(firestoreServiceProvider)
                              .counsellorAppointmentsOverlapping(
                                counsellorId: selectedCounsellor!.uid,
                                start: startOfDay,
                                end: endOfDay,
                              );

                          if (ctx.mounted) {
                            setState(() {
                              conflicts = overlaps;
                              loadingConflicts = false;
                            });
                          }
                        }
                      },
                    ),
                    if (loadingConflicts)
                      const Padding(
                        padding: EdgeInsets.only(top: 8.0),
                        child: Row(
                          children: [
                            SizedBox(
                              height: 18,
                              width: 18,
                              child: CircularProgressIndicator(strokeWidth: 2),
                            ),
                            SizedBox(width: 8),
                            Text('Checking bookings...'),
                          ],
                        ),
                      ),
                    if (!loadingConflicts && conflicts.isNotEmpty)
                      Container(
                        margin: const EdgeInsets.only(top: 12),
                        padding: const EdgeInsets.all(12),
                        decoration: BoxDecoration(
                          color: Colors.amber.withValues(alpha: 0.12),
                          borderRadius: BorderRadius.circular(12),
                        ),
                        child: Column(
                          crossAxisAlignment: CrossAxisAlignment.start,
                          children: [
                            const Text('Bookings in this range', style: TextStyle(fontWeight: FontWeight.w700)),
                            const SizedBox(height: 8),
                            ...conflicts.map(
                              (a) => Padding(
                                padding: const EdgeInsets.symmetric(vertical: 4),
                                child: Row(
                                  children: [
                                    const Icon(Icons.event_busy, size: 18),
                                    const SizedBox(width: 8),
                                    Expanded(
                                      child: Text(
                                        '${DateFormat('MMM d, y').format(a.start)} • ${DateFormat('h:mm a').format(a.start)} - ${DateFormat('h:mm a').format(a.end)}',
                                      ),
                                    ),
                                  ],
                                ),
                              ),
                            ),
                            const SizedBox(height: 8),
                            Text('Please reschedule these before adding the leave.', style: Theme.of(context).textTheme.bodySmall),
                          ],
                        ),
                      ),
                    const SizedBox(height: 12),
                    TextField(
                      controller: reasonController,
                      decoration: const InputDecoration(labelText: 'Reason (optional)'),
                      maxLines: 2,
                    ),
                    const SizedBox(height: 24),
                    Row(
                      mainAxisAlignment: MainAxisAlignment.end,
                      children: [
                        TextButton(onPressed: () => Navigator.pop(dialogContext), child: const Text('Cancel')),
                        const SizedBox(width: 12),
                        ElevatedButton.icon(
                          icon: const Icon(Icons.check_circle),
                          label: const Text('Add Leave'),
                          onPressed: selectedCounsellor != null && startDate != null && endDate != null && !loadingConflicts && conflicts.isEmpty
                              ? () async {
                                  await firestore.addLeave(
                                    userId: selectedCounsellor!.uid,
                                    startDate: startDate!,
                                    endDate: endDate!,
                                    reason: reasonController.text.trim(),
                                    leaveType: leaveType,
                                  );
                                  if (context.mounted) {
                                    Navigator.pop(dialogContext);
                                    ScaffoldMessenger.of(context).showSnackBar(
                                      const SnackBar(content: Text('Leave added and bookings will be blocked during the period.')),
                                    );
                                  }
                                }
                              : null,
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ),
          ),
        ),
      );
    }

    Color _getLeaveTypeColor(String type) {
      switch (type.toLowerCase()) {
        case 'medical':
          return Colors.red.shade100;
        case 'personal':
          return Colors.blue.shade100;
        case 'emergency':
          return Colors.orange.shade100;
        default:
          return Colors.grey.shade100;
      }
    }

    Future<void> _handleLeaveRequest(
      BuildContext context,
      WidgetRef ref,
      String requestId,
      String counsellorId,
      bool approved,
      String counsellorName,
    ) async {
      final confirm = await showDialog<bool>(
        context: context,
        builder: (ctx) => AlertDialog(
          title: Text(approved ? 'Approve Leave' : 'Decline Leave'),
          content: Text(
            approved
                ? 'Approve leave request for $counsellorName? This will block bookings during the leave period.'
                : 'Decline leave request for $counsellorName? Bookings will remain available.',
          ),
          actions: [
            TextButton(
              onPressed: () => Navigator.pop(ctx, false),
              child: const Text('Cancel'),
            ),
            ElevatedButton(
              onPressed: () => Navigator.pop(ctx, true),
              style: ElevatedButton.styleFrom(
                backgroundColor: approved ? Colors.green : Colors.red,
                foregroundColor: Colors.white,
              ),
              child: Text(approved ? 'Approve' : 'Decline'),
            ),
          ],
        ),
      );

      if (confirm == true) {
        try {
          final firestore = ref.read(firestoreServiceProvider);
          await firestore.processLeaveRequest(requestId, approved);
        
          // Send notification to counsellor
          await firestore.sendNotification(
            userId: counsellorId,
            title: approved ? 'Leave Approved' : 'Leave Declined',
            message: approved
                ? 'Your leave request has been approved by admin.'
                : 'Your leave request has been declined by admin.',
            type: approved ? 'leave_approved' : 'leave_declined',
          );

          if (context.mounted) {
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(
                content: Text(approved ? 'Leave request approved' : 'Leave request declined'),
                backgroundColor: approved ? Colors.green : Colors.red,
              ),
            );
          }
        } catch (e) {
          if (context.mounted) {
            ScaffoldMessenger.of(context).showSnackBar(
              SnackBar(content: Text('Error: $e')),
            );
          }
        }
      }
    }
  }

