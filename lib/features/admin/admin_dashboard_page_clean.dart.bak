// ===== APPOINTMENTS TAB =====
class _ManageAppointmentsTab extends ConsumerStatefulWidget {
  const _ManageAppointmentsTab();

  @override
  ConsumerState<_ManageAppointmentsTab> createState() => _ManageAppointmentsTabState();
}

class _ManageAppointmentsTabState extends ConsumerState<_ManageAppointmentsTab> {
  final TextEditingController _searchController = TextEditingController();
  String _timeFilter = 'all'; // all, 1week, 2weeks, month

  @override
  void dispose() {
    _searchController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    final firestore = ref.watch(firestoreServiceProvider);

    return StreamBuilder<List<UserProfile>>(
      stream: firestore.allStudents(),
      builder: (context, studentSnap) {
        if (studentSnap.connectionState == ConnectionState.waiting) {
          return const Center(child: CircularProgressIndicator());
        }

        final studentMap = {
          for (final s in studentSnap.data ?? []) s.uid: s.displayName,
        };

        return StreamBuilder<List<UserProfile>>(
          stream: firestore.counsellors(),
          builder: (context, counsellorSnap) {
            if (counsellorSnap.connectionState == ConnectionState.waiting) {
              return const Center(child: CircularProgressIndicator());
            }

            final counsellorMap = {
              for (final c in counsellorSnap.data ?? []) c.uid: c.displayName,
            };

            return StreamBuilder<List<Appointment>>(
              stream: firestore.allAppointments(),
              builder: (context, snapshot) {
                if (snapshot.connectionState == ConnectionState.waiting) {
                  return const Center(child: CircularProgressIndicator());
                }

                var appointments = snapshot.data!;
                final q = _searchController.text.trim().toLowerCase();
                final now = DateTime.now();

                // Apply time filter
                if (_timeFilter != 'all') {
                  final duration = _timeFilter == '1week'
                      ? Duration(days: 7)
                      : _timeFilter == '2weeks'
                          ? Duration(days: 14)
                          : Duration(days: 30);
                  final cutoff = now.add(duration);
                  appointments = appointments.where((a) => a.start.isBefore(cutoff) && a.start.isAfter(now)).toList();
                }

                // Apply search filter (by id or name)
                if (q.isNotEmpty) {
                  appointments = appointments.where((a) {
                    final studentName = (studentMap[a.studentId] ?? '').toLowerCase();
                    final counsellorName = (counsellorMap[a.counsellorId] ?? '').toLowerCase();
                    return a.studentId.toLowerCase().contains(q) ||
                        a.counsellorId.toLowerCase().contains(q) ||
                        studentName.contains(q) ||
                        counsellorName.contains(q);
                  }).toList();
                }

                if (appointments.isEmpty) {
                  return const Center(child: Text('No appointments found'));
                }

                return Column(
                  children: [
                    Card(
                      margin: const EdgeInsets.symmetric(horizontal: 8, vertical: 8),
                      child: Padding(
                        padding: const EdgeInsets.all(12),
                        child: Column(
                          crossAxisAlignment: CrossAxisAlignment.start,
                          children: [
                            TextField(
                              controller: _searchController,
                              onChanged: (_) => setState(() {}),
                              decoration: const InputDecoration(
                                labelText: 'Search by student or counsellor',
                                prefixIcon: Icon(Icons.search),
                                border: OutlineInputBorder(),
                              ),
                            ),
                            const SizedBox(height: 8),
                            Wrap(
                              spacing: 8,
                              children: [
                                FilterChip(
                                  label: const Text('All'),
                                  selected: _timeFilter == 'all',
                                  onSelected: (_) => setState(() => _timeFilter = 'all'),
                                ),
                                FilterChip(
                                  label: const Text('1 Week'),
                                  selected: _timeFilter == '1week',
                                  onSelected: (_) => setState(() => _timeFilter = '1week'),
                                ),
                                FilterChip(
                                  label: const Text('2 Weeks'),
                                  selected: _timeFilter == '2weeks',
                                  onSelected: (_) => setState(() => _timeFilter = '2weeks'),
                                ),
                                FilterChip(
                                  label: const Text('1 Month'),
                                  selected: _timeFilter == 'month',
                                  onSelected: (_) => setState(() => _timeFilter = 'month'),
                                ),
                              ],
                            ),
                          ],
                        ),
                      ),
                    ),
                    Expanded(
                      child: ListView.separated(
                        padding: const EdgeInsets.all(8),
                        itemCount: appointments.length,
                        separatorBuilder: (_, __) => const Divider(height: 0),
                        itemBuilder: (context, i) {
                          final apt = appointments[i];
                          final studentName = studentMap[apt.studentId] ?? apt.studentId;
                          final counsellorName = counsellorMap[apt.counsellorId] ?? apt.counsellorId;
                          return ListTile(
                            leading: const Icon(Icons.event),
                            title: Text('${DateFormat('MMM dd, yyyy').format(apt.start)} • ${DateFormat('h:mm a').format(apt.start)}'),
                            subtitle: Text('Status: ${apt.status.name}\nStudent: $studentName\nCounsellor: $counsellorName'),
                            trailing: const Icon(Icons.chevron_right),
                            onTap: () => _showAppointmentDetails(context, apt, studentName, counsellorName),
                          );
                        },
                      ),
                    ),
                  ],
                );
              },
            );
          },
        );
      },
    );
  }

