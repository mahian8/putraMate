rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.data.role;
    }
    
    function isStudent() {
      return isSignedIn() && getUserRole() == 'student';
    }
    
    function isCounsellor() {
      return isSignedIn() && getUserRole() == 'counsellor';
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Allow querying for users by any authenticated user (students need to see counsellors)
      allow list: if isSignedIn() && request.query.limit <= 100;
      
      // Allow read for self, admins, counsellors, and students reading counsellor profiles
      allow read: if isSignedIn() && (
        request.auth.uid == userId || 
        isAdmin() ||
        isCounsellor() ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student')
      );
      
      // Allow create for self-registration (students) or admin creating any user
      // Admin can create users with any role (student, counsellor, admin)
      allow create: if isSignedIn() && (
        (request.auth.uid == userId && request.resource.data.role == 'student') ||
        isAdmin()
      );
      
      // Allow updates for self or admin
      allow update: if isSignedIn() && (
        request.auth.uid == userId || 
        isAdmin()
      );
      
      allow delete: if isSignedIn() && isAdmin();
      
      // Chat history - private to user
      match /chatHistory/{conversationId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        
        // Messages subcollection within each conversation
        match /messages/{messageId} {
          allow read, write: if isSignedIn() && request.auth.uid == userId;
        }
      }
      
      // Mood entries - private to student
      match /moods/{moodId} {
          allow read: if isSignedIn() && (
           request.auth.uid == userId || 
           isCounsellor() ||
           isAdmin()
          );
          allow write: if isSignedIn() && request.auth.uid == userId;
      }

      // Notifications subcollection - user-specific notifications
      match /notifications/{notificationId} {
        // Only the owner can read/list their notifications
        allow read, list: if isSignedIn() && request.auth.uid == userId;
        // Creation allowed by any authenticated user (client enforces who sends)
        allow create: if isSignedIn();
        // Updates (e.g., mark read) allowed by the owner; deletes by admin
        allow update: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Appointments
    match /appointments/{appointmentId} {
      // Allow listing appointments for queries by participants, studentId, or counsellorId
      allow list: if isSignedIn();
      
      allow read: if isSignedIn() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.counsellorId == request.auth.uid ||
        (resource.data.keys().hasAny(['participants']) && 
         resource.data.participants.hasAny([request.auth.uid])) ||
        // Allow counsellors to read any appointment (e.g. for Student Insights)
        isCounsellor() ||
        // Allow students to read any appointment that contains a review (rating or comment)
        // This enables universal visibility of reviews regardless of status,
        // while Firestore still filters to only docs that match this condition.
        (isStudent() &&
         (resource.data.studentRating > 0 ||
          resource.data.studentComment != null)) ||
        isAdmin()
      );
      
      // Students can create appointments
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.counsellorId == request.auth.uid ||
        isAdmin()
      );
      
      allow delete: if isSignedIn() && isAdmin();
    }
    
    // Community forum - public read to authenticated, authenticated write
    match /forum/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow post author or admin to update/delete; additionally allow updates
      // that only change likes/commentCount by any authenticated user
      allow update: if isSignedIn() && (
        resource.data.authorId == request.auth.uid || 
        isAdmin() ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount'])) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'commentCount']))
      );

      allow delete: if isSignedIn() && (
        resource.data.authorId == request.auth.uid || isAdmin()
      );
      
      // Forum comments - authenticated users can read and write
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && (
          resource.data.userId == request.auth.uid ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
        );
      }
    }
    
    // Chat messages - restricted to participants
    match /chats/{threadId}/messages/{messageId} {
      allow read, write: if isSignedIn() && (
        threadId.matches('.*' + request.auth.uid + '.*') ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counsellor' ||
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'))
      );
    }
    
    // Helper to check if counsellor is assigned (simplified)
    function isAssignedCounsellor(studentId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counsellor';
    }
    
    // Login events collection - for logging
    match /loginEvents/{eventId} {
      allow read: if isSignedIn() && (
        resource.data.uid == request.auth.uid || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
      allow create: if true; // Allow login event creation even before auth is fully established
    }

    // High-risk flags - for counsellors and admins to review
    match /highRiskFlags/{flagId} {
      allow list: if isSignedIn() && (
        isCounsellor() || isAdmin()
      );
      
      allow read: if isSignedIn() && (
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counsellor' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counsellor' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Notifications collection - for sending notifications to users
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && request.query.limit <= 100;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // Leaves collection - admin managed
    match /leaves/{leaveId} {
      allow list: if isSignedIn();
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        isStudent()
      );
      allow create, update, delete: if isSignedIn() && isAdmin();
    }

    // Leave requests: counsellors create, admins review
    match /leave_requests/{requestId} {
      allow list: if isSignedIn() && isAdmin();
      allow read: if isSignedIn() && (
        isAdmin() ||
        (isCounsellor() && resource.data.userId == request.auth.uid)
      );
      allow create: if isSignedIn() && isCounsellor();
      allow update, delete: if isSignedIn() && isAdmin();
    }
  }
}
